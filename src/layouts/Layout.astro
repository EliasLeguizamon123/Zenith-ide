---
import CloseBar from "../components/CloseBar.astro";
import MountainLogo from "../components/MountainLogo.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-base h-[95vh]">
    <CloseBar>
      <MountainLogo width={"24"} , height={"24"} customClass="stroke-sky stroke-1 pt-1" />
    </CloseBar>
    <slot />
  </body>
</html>
