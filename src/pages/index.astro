---
import Layout from '../layouts/Layout.astro';
import HomeSection from '../components/HomeSection.astro'
import TextEditorSection from '../components/TextEditorSection.astro'

---

<Layout title="Zenith">
		<HomeSection />
		<TextEditorSection />
</Layout>
<script>
	import { isFileOpen } from '../stores/fileStore'

	isFileOpen.subscribe((value) => {
		console.log(value)
		if (value){
			document.getElementById('editor')?.style.setProperty('display', 'flex');
			document.getElementById('home')?.style.setProperty('display', 'none');

			document.getElementById('editor')?.focus();
		} else {
			document.getElementById('home')?.style.setProperty('display', 'flex');
			document.getElementById('editor')?.style.setProperty('display', 'none');
		}
	});
</script>